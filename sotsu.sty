    \IfValueTF{#2}{
        % ひとつめの[]が存在するとき
        \IfBlankTF{#2}{
            % ひとつめの[]が空のとき（ルビなし）
            {\boldmath\gtfamily\bfseries#1}
        }{
            % ひとつめの[]が空でないとき（ルビあり）
            {\boldmath\gtfamily\bfseries\ruby{#1}{#2}}
        }
    }{
        % ひとつめの[]が存在しないとき（ルビなし）
        {\boldmath\gtfamily\bfseries#1}
    }

    % ふたつめの[]が存在するとき
    \IfValueTF{#3}{
        \index{#3@#1}
    }{
    }
    
    \IfValueT{#4}
        {~({\boldmath\rmfamily\bfseries#4})}

    \egroup
}
